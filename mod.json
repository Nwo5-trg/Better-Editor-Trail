{
	"geode": "4.5.0",
	"gd": {
		"win": "2.2074",
		"android": "2.2074",
		"mac": "2.2074",
		"ios": "2.2074"
	},
	"id": "nwo5.better_editor_trail",
	"name": "Better Editor Trail",
	"version": "v2.0.5",
	"developer": "Nwo5",
	"description": "A customizable editor trail alternative.",
	"tags": ["editor", "enhancement", "bugfix", "customization", "offline"],
	"links": {"source": "https://github.com/Nwo5-trg/Better-Editor-Trail"},
	"settings": {
		"trail-title": {
			"type": "title",
			"name": "Trail"
		},
		"trail-size-one": {
			"type": "float",
			"name": "P1 Trail Size",
			"default": 1,
			"min": 0.1,
			"max": 10
		},
		"trail-size-two": {
			"type": "float",
			"name": "P2 Trail Size",
			"default": 1,
			"min": 0.1,
			"max": 10
		},
		"trail-color-one": {
			"type": "rgba",
			"name": "P1 Trail Color",
			"default": [51, 255, 51, 255]
		},
		"trail-color-two": {
			"type": "rgba",
			"name": "P2 Trail Color",
			"default": [51, 255, 255, 255]
		},
		"use-hold-one": {
			"type": "bool",
			"name": "P1 Show Holding",
			"description": "change trail color when holding",
			"default": true
		},
		"use-hold-two": {
			"type": "bool",
			"name": "P2 Show Holding",
			"description": "change trail color when holding",
			"default": true
		},
		"trail-hold-color-one": {
			"type": "rgba",
			"name": "P1 Trail Hold Color",
			"default": [151, 255, 151, 255]
		},
		"trail-hold-color-two": {
			"type": "rgba",
			"name": "P2 Trail Hold Color",
			"default": [151, 255, 255, 255]
		},
		"player-one-for-trail": {
			"type": "bool",
			"name": "Use P1",
			"default": false,
			"description": "use p1 color as p1 trail color"
		},
		"player-two-for-trail": {
			"type": "bool",
			"name": "Use P2",
			"default": false,
			"description": "use p2 color as p2 trail color"
		},
		"hide-when-playtesting": {
			"type": "bool",
			"name": "Hide When Playtesting",
			"default": false
		},
		"trail-timer": {
			"type": "float",
			"name": "Trail Timer",
			"description": "how often the trail updates per second i think",
			"default": 240,
			"min": 0.1,
			"max": 480
		},
		"clicks-title": {
			"type": "title",
			"name": "Clicks"
		},
		"show-clicks": {
			"type": "bool",
			"name": "Show Clicks",
			"default": true
		},
		"click-shape": {
			"type": "string",
			"name": "Click Shape",
			"default": "Square",
			"one-of": ["Square", "Circle", "Triangle", "Prism"]
		},
		"click-direction": {
			"type": "bool",
			"name": "Click Direction Indicator",
			"description": "instead of click shape, the indicator in platformer mode will be an arrow pointing towards move direction",
			"default": true
		},
		"click-size": {
			"type": "float",
			"name": "Click Size",
			"default": 2,
			"min": 0.1,
			"max": 10
		},
		"click-color-one": {
			"type": "rgba",
			"name": "P1 Click Color",
			"default": [244, 139, 0, 255]
		},
		"click-color-two": {
			"type": "rgba",
			"name": "P2 Click Color",
			"default": [244, 139, 0, 255]
		},
		"releases-title": {
			"type": "title",
			"name": "Releases"
		},
		"show-releases": {
			"type": "bool",
			"name": "Show Releases",
			"default": true
		},
		"release-shape": {
			"type": "string",
			"name": "Release Shape",
			"default": "Circle",
			"one-of": ["Square", "Circle", "Triangle", "Prism"]
		},
		"release-direction": {
			"type": "bool",
			"name": "Release Direction Indicator",
			"description": "instead of click shape, the indicator in platformer mode will be an arrow pointing towards move direction",
			"default": true
		},
		"release-size": {
			"type": "float",
			"name": "Release Size",
			"default": 1.5,
			"min": 0.1,
			"max": 10
		},
		"release-color-one": {
			"type": "rgba",
			"name": "P1 Release Color",
			"default": [0, 235, 255, 255]
		},
		"release-color-two": {
			"type": "rgba",
			"name": "P2 Release Color",
			"default": [0, 235, 255, 255]
		}
	}
}
